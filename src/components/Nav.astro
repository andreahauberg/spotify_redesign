---
import Button from "./Button.astro";

// const { title } = Astro.props;
---

<nav>
  <div class="logo">
    <a href="/#">
      <img src="../public/logo.svg" alt="Spotify Logo" class="logo" />
    </a>
  </div>
  <ul>
    <li>
      <a class="home_link" href="/#"
        ><img
          src="/public/Home.svg"
          alt="Spotify Home Icon"
          class="icon"
        /><span>Home</span></a
      >
    </li>
    <li>
      <a class="link" href="/#"
        ><img
          src="/public/SearchIcon.svg"
          alt="Spotify Search Icon"
          class="icon"
        /><span>Search</span></a
      >
    </li>
    <li>
      <a class="link" href="/#"
        ><img
          src="/public/YourPlaylist.svg"
          alt="Spotify Library Icon"
          class="icon"
        /><span>Your Library</span></a
      >
    </li>
    <li>
      <a class="link" href="/#"
        ><img
          src="/public/create_playlist.svg"
          alt="Spotify Create Icon"
          class="icon"
        /><span>Create Playlist</span></a
      >
    </li>
    <li>
      <a class="link" href="/#"
        ><img
          src="/public/liked_spotify.png"
          alt="Spotify Liked Songs Icon"
          class="icon_liked"
        /><span>Liked Songs</span></a
      >
    </li>
    <br /><br /><br /><br />
    <li>
      <a class="cookies" href="/#"><span>Cookies</span></a>
    </li>
    <li>
      <Button variant="other" size="small">
        <svg height="16" width="16" viewBox="0 0 16 16" fill="currentColor"
          ><path
            d="M8.152 16H8a8 8 0 1 1 .152 0zm-.41-14.202c-.226.273-.463.713-.677 1.323-.369 1.055-.626 2.496-.687 4.129h3.547c-.06-1.633-.318-3.074-.687-4.129-.213-.61-.45-1.05-.676-1.323-.194-.235-.326-.285-.385-.296h-.044c-.055.007-.19.052-.391.296zM4.877 7.25c.062-1.771.34-3.386.773-4.624.099-.284.208-.554.329-.806a6.507 6.507 0 0 0-4.436 5.43h3.334zm-3.334 1.5a6.507 6.507 0 0 0 4.436 5.43 7.974 7.974 0 0 1-.33-.806c-.433-1.238-.71-2.853-.772-4.624H1.543zm4.835 0c.061 1.633.318 3.074.687 4.129.214.61.451 1.05.677 1.323.202.244.336.29.391.297l.044-.001c.06-.01.19-.061.385-.296.226-.273.463-.713.676-1.323.37-1.055.626-2.496.687-4.129H6.378zm5.048 0c-.061 1.771-.339 3.386-.772 4.624-.082.235-.171.46-.268.674a6.506 6.506 0 0 0 4.071-5.298h-3.03zm3.031-1.5a6.507 6.507 0 0 0-4.071-5.298c.097.214.186.44.268.674.433 1.238.711 2.853.772 4.624h3.031z"
          ></path></svg
        >
         English
      </Button>
    </li>
  </ul>
</nav>

<style>
  nav {
    display: flex;
    position: fixed;
    height: 100%;
    top: 10vh;
    flex-direction: column;
    width: 15rem;
    padding: var(--space-lg);
    background: var(--background-color);
    font-size: var(--font-size-small);
  }

  .logo {
    margin-bottom: 0;
    max-width: 10rem;
    margin-left: 1rem;
    margin-top: 1rem;
  }

  .link {
    font-family: GothamMedium;
    font-size: 1rem;
    color: var(--text-secondary);
  }
  .home_link {
    font-family: GothamMedium;
    font-size: 1rem;
    color: var(--text-primary);
  }

  .link:hover {
    color: var(--text-primary);
  }

  .icon {
    padding-right: 10px;
    max-width: 34px;
  }

  .icon_liked {
    padding-right: 10px;
    max-width: 34px;
    border-radius: 10%;
  }
  .cookies {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }
</style>
