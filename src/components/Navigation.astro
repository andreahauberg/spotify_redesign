<style>
  .nav-container {
    width: 200px;
    display: flex;
    flex-direction: column;
  }

  li {
    padding-bottom: 8px;
    margin-left: -20px;
  }

  .home_link {
    font-family: GothamMedium;
    font-size: 1rem;
    color: var(--text-primary);
  }

  .icon {
    padding-right: 10px;
    max-width: 34px;
  }

  .icon_liked {
    padding-right: 10px;
    max-width: 34px;
    border-radius: 10%;
  }

  .button,
  .cookies {
    display: flex;
    flex-direction: row;
    padding: 8px;
    gap: 10px;
    align-items: end;
    margin-bottom: -5px;
    font-family: GothamMedium;
    font-size: 1rem;
